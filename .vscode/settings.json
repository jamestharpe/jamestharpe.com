{
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
	"**/.cache": true,
    "**/.factorypath": true,
    "node_modules": true
	},
	"cSpell.words": [
		"Bujo",
		"CLIs",
		"Feedly",
		"Ferriss",
		"Hanselman",
		"Khourshid",
		"Kubernetes",
		"Kublet",
		"MPCA",
		"Statechart",
		"Tharpe",
		"Tharpe's",
		"discoverability",
		"frontmatter",
		"gtag",
		"jamestharpe",
		"katex",
		"kubectl",
		"markdownlint",
		"nstall",
		"prismjs",
		"statecharts",
		"xstate"
	],
	"editor.insertSpaces": false,
	"editor.detectIndentation": false,
	"editor.codeActionsOnSave": {
		"source.organizeImports": true,
		"source.fixAll": true,
	},
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact"
	]
}